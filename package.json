{
  "name": "vue-webpack4-demo",
  "version": "1.0.1",
  "description": "vue-webpack4-template",
  "author": "lpeihan <“291630202@qq.com”>",
  "homepage": "https://lpeihan.github.io/webpack4/",
  "repository": {
    "type": "git",
    "url": "https://github.com/lpeihan/webpack4"
  },
  "bugs": {
    "url": "https://github.com/lpeihan/webpack4/issues"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production node build/build.js",
    "dev": "cross-env NODE_ENV=development PORT=9090 nodemon build/dev-server.js",
    "lint": "eslint --ext .js --ext .vue src/",
    "lint-fix": "eslint --fix --ext .js --ext .vue src/ build/",
    "dll": "webpack --config build/webpack.dll.conf.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "analyz": "cross-env NODE_ENV=production npm_config_report=true npm run build"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "@babel/runtime-corejs2": "^7.1.5",
    "axios": "^0.18.0",
    "dayjs": "^1.7.7",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "address": "^1.0.3",
    "autoprefixer": "^9.3.1",
    "babel-eslint": "^10.0.1",
    "babel-helper-vue-jsx-merge-props": "^2.0.3",
    "babel-loader": "^8.0.4",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-vue-jsx": "^3.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "chalk": "^2.4.1",
    "conventional-changelog-cli": "^2.0.11",
    "copy-webpack-plugin": "^4.6.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "eslint": "^5.8.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^5.0.0-beta.3",
    "file-loader": "^2.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "happypack": "^5.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.3",
    "inline-manifest-webpack-plugin": "^4.0.2",
    "lint-staged": "^8.0.4",
    "mini-css-extract-plugin": "^0.4.4",
    "nib": "^1.1.2",
    "nodemon": "^1.18.6",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "os": "^0.1.1",
    "postcss-loader": "^3.0.0",
    "progress-bar-webpack-plugin": "^1.11.0",
    "rimraf": "^2.6.2",
    "style-loader": "^0.23.1",
    "style-resources-loader": "^1.2.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "svg-sprite-loader": "^4.1.3",
    "svgo": "^1.1.1",
    "svgo-loader": "^2.2.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.2",
    "validate-commit-msg": "^2.14.0",
    "vue-loader": "^15.4.2",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.25.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "verbose": false,
    "ignore": [
      "dist/**/*",
      "src/**/*"
    ],
    "ext": "js json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "validate-commit-msg"
    }
  },
  "lint-staged": {
    "src/**/*.{js,vue}": [
      "npm run lint-fix",
      "git add"
    ]
  }
}
