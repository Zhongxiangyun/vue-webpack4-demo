/* fade */
@keyframes fade-in
  from
    opacity: 0

  to
    opacity: 1

@keyframes fade-out
  from
    opacity: 1

  to
    opacity: 0

/* slide */
@keyframes slide-in-down
  from
    transform: translate3d(0, -100%, 0)

  to
    transform: translate3d(0, 0, 0)

@keyframes slide-out-down
  from
    transform: translate3d(0, 0 0)

  to
    transform: translate3d(0, -100%, 0)

/* zoom */
@keyframes zoom-in
  from
    opacity: 0
    transform: scale3d(0.3, 0.3, 0.3)

  50%
    opacity: 1

@keyframes zoomOut
  from
    opacity: 1

  50%
    opacity: 0
    transform: scale3d(0.3, 0.3, 0.3)

  to
    opacity: 0
